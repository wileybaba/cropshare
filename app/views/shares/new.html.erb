

<h2>Share your crop with your local community.</h2>

  <%= form_for @share do |f| %>



    <div class="form-group row">
      <%= f.label "Share name", class:"col-form-label" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group row">
      <%= f.label "What's in your share?", class:"col-form-label" %>
      <%= f.text_area :contains, class: "form-control" %>
      <small id="emailHelp" class="form-text text-muted">Seasonal vegetables? Fruit? Coffee? Whatever your shares will contain, let your customers know here.</small>
    </div>

    <div class="form-group row" data-provide="datepicker">
      <%= f.label "Start date", class:"col-form-label" %>
      <%= f.text_field :start_date, class: "form-control" %>
         <div class="input-group-addon">
            <span class="glyphicon glyphicon-th"></span>
        </div>
    </div>

    <div class="form-group row">
      <div class="row col-md-4">
        <%= f.submit "Submit", :action => "create", type: "submit", class: "btn btn-primary" %>
      </div>
    </div>

  <% end %>

