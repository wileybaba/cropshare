


<div class="card">
  <div class="card-body">
    <h5 class="card-title"><%= @share.name %></h5>
    <h6 class="card-subtitle mb-2 text-muted"><%= @share.user.username %></h6>

    <ul class="list-group list-group-flush">
     <li class="list-group-item"><%= @share.contains %></li>
     <li class="list-group-item">
     <p class="card-text">Pickup:
       <span class="badge badge-pill badge-secondary"><%= @share.regularity %></span> | $<%= @share.cost.to_i %> per pickup
     </p></li>
     <li class="list-group-item">Pickup location: ***google map***</li>
   </ul>
    <br />
    <%= link_to 'Edit Share', '#', class:"card-link" %>
    <a href="#" class="card-link">Add Member</a>
  </div>
  <small class="timestamp text-muted mx-1">
    Posted <%= time_ago_in_words(@share.created_at) %> ago.
  </small>
</div>
